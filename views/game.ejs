<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Game</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js'></script>
    <script src="https://cdn.jsdelivr.net/handlebarsjs/4.0.5/handlebars.min.js" integrity="sha256-rMOSOM5HDzVEMoVZTv2189+RKSTSgY5ZKfTfap7q2zE=" crossorigin="anonymous"></script>
  </head>
  <body>
  <div id="nav-bar">
    <a href="/">Home page</a>
    <a href="/logout">Logout</a>
  </div>
    <section id="shuffleAnimation"></section>
    <script id="shuffleAnim" type="text/x-handlebars-template">
      <div class="hold">
        <div class="inside">
        {{#times 16}}
          <div class="cards"></div>
        {{/times}}
        </div>
        <div class="inside what">
        {{#times 16}}
          <div class="cards"></div>
        {{/times}}
        </div>
      </div>
    </script>




    <!-- Change opacity to zero with time -->
      <section class="hand" id='hand-container'></section>
      <script id="handTemp" type="text/x-handlebars-template">



      <section id="opponent-position" class="opponent-hand">
        {{#times opponent_hand}}
        <div class="opponent-cards"></div>
        {{/times}}
      </section>

       <section id="discard">
         <span class="card-front" data-rank-idx="{{discard.[0]}}" data-suit-idx="{{discard.[1]}}"></span>
       </section>
       <section class="deck"></section>
       <section class="deck2"></section>
       <section class="deck3"></section>

     <section class=“dropPile”>
      <span class=‘card-set’>
       {{#each drop_pile}}
       <span class=‘card-front’ data-suit-idx=1 data-rank-idx=1></span>
       <span class=‘card-front’ data-suit-idx=2 data-rank-idx=1></span>
       <span class=‘card-front’ data-suit-idx=3 data-rank-idx=1></span>
     </span>

       <div class="player">
      {{#each hand}}
        <span>{{this}}</span>
        <span class="card-front" data-rank-idx="{{this.[0]}}" data-suit-idx="{{this.[1]}}"></span>
        {{/each}}

        </div>

      <div class='start-turn'>
        <button class='play start draw' {{moves.draw}}>Draw from deck</button>
        <button class='play start takeTop' {{moves.take_top}}>Draw top discard</button>
        <button class='play start takeAll' {{moves.take_all}}>Take all discard</button>
      </div>
      <div class='mid-turn'>
        <button class='play mid dropSet cool' {{moves.drop_set}}>Drop matching set</button>
        <button class='play mid attachOne cool' {{moves.attach_one}}>Attach card to drop pile</button>
        <button class='play mid discard' {{moves.discard}}>Discard and end turn</button>
      </div>
    </script>
    <script type="text/javascript" src="/scripts/game.js"></script>
    <div class="win"> </div>
    <div class="lose"> </div>
  </body>
</html>